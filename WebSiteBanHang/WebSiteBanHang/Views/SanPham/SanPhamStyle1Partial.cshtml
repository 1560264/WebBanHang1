@using WebSiteBanHang.Models
@model IEnumerable<SanPham>

<div class="content-top">
    <div class="grid-in">
        @foreach (var item in Model)
        {
            <div class="col-md-4 grid-top">
                <a href="@Url.Action("XemChiTiet", "SanPham", new { id = item.MaSP })" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src="@Url.Content("~/Content/img_SanPham/laptop/"+item.HinhAnh)" alt="">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-left    b-delay03 ">
                            <span>@item.CauHinh</span>
                        </h3>
                    </div>
                </a>
                <p><a href="single.html">@item.TenSP</a></p>
            </div>
        }

        <div class="clearfix"> </div>
    </div>
</div>
