@using WebSiteBanHang.Models
@model ThanhVien
@{
    ViewBag.Title = "DangKy2";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}
<div class="register">
    @using (Html.BeginForm())
        {
        <div class="col-md-6 register-top-grid">
            <h2 style="text-align:center">Thông Tin Tài Khoản</h2>

            <div>
                <span>Tên tài khoản: </span>
                @Html.TextBox("TaiKhoan")
            </div>
            <div>
                <span>Mật khẩu: </span>
                @Html.Password("MatKhau")
            </div>
            <div>
                <span>Nhập lại mật khẩu: </span>
                @Html.Password("NhapLaiMatKhau")
            </div>
            <div class="clearfix"></div>
        </div>
        <h2 style="text-align:center">Thông Tin Cá Nhân</h2>
        <div class="col-md-6 register-top-grid register-bottom-grid">
            <div>
                <span>Họ tên: </span>
                @Html.TextBox("HoTen")
            </div>

            <div>
                <span>Địa chỉ: </span>
                @Html.TextBox("DiaChi")
            </div>
            <div>
                <span>Email: </span>
                @Html.TextBox("Email")
            </div>
            <div>
                <span>Số điện thoại: </span>
                @Html.TextBox("SoDienThoai")
            </div>
            <div>
                <span>Câu hỏi bí mật: </span>
                @Html.TextBox("CauHoi")
            </div>
            <div>
                <span>Câu trả lời: </span>
                @Html.TextBox("CauTraLoi")
            </div>
            <input value="Xác Nhận" type="submit" />
            }
            <div class="clearfix"></div>
        </div>
    </div>