@using WebSiteBanHang.Models

<div class="header-top">
    <div class="container">
        <div class="search">
            <form>
                <input type="text" value="Search " onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                <input type="submit" value="Go">
            </form>
        </div>
        <div class="header-left">
            <ul>
                @if (Session["TaiKhoan"] != null && Session["TaiKhoan"] != "")
                {
                    ThanhVien tv = (ThanhVien)Session["TaiKhoan"];
                    <li>Chào @tv.HoTen</li>
                    @Html.ActionLink("DangXuat", "DangXuat", "Home")
                }
                else
                {
                    <li><a id="btnDangNhap" href="#">Đăng Nhập</a></li>
                    <li><a href="@Url.Action("DangKy2","Home")">Đăng Ký</a></li>
                }
            </ul>
            <div class="cart box_1">
                <a href="checkout.html">
                    <h3>
                        <div class="total">
                            <span class="simpleCart_total">$0.00</span> (<span id="simpleCart_quantity" class="simpleCart_quantity">0</span> items)
                        </div>
                        <img src="~/Content/images/cart.png" alt="">
                    </h3>
                </a>
                <p><a href="javascript:;" class="simpleCart_empty">Empty Cart</a></p>

            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>



<div class="login-form">
    @using (Ajax.BeginForm("DangNhap", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "#ThongBao1" }))
    {
        <span>User Login</span>
        <span><button type="button" style="color:red;height:15px;width:10px" id="btnCloseForm">X</button></span><br />
        <span> Tên đăng nhập:</span> <input type="text" placeholder="User" name="txtTenDangNhap" class="TaiKhoan" /><br />
        <span>Mật khẩu:</span> <input type="password" placeholder="Pass" name="txtMatKhau" class="MatKhau" /><br />
        <h3 style="color:red;font-weight:bold;text-align:left" id="#ThongBao1">abc</h3>
        <input type="submit" value="Đăng nhập" />

    }
</div>

<style>
    .login-form {
        border: solid black;
        z-index: 9999;
        margin-top: 130px;
        height: 330px;
        margin-left: 550px;
        top: 0;
        left: 0;
        position: fixed;
        background: blueviolet;
        display: none;
    }
</style>
<script type="text/javascript">
    $("#btnDangNhap").click(function () {
        $(".login-form").show();
    })
    $("#btnCloseForm").click(function () {
        $(".login-form").hide();
    })
